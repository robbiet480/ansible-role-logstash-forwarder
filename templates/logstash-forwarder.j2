{
  "network": {
    "servers": [
      {% for server in logstash_forwarder.servers %}
        "{{ server.host }}:{{ server.port }}"{% if not loop.last %},{% endif %}
      {% endfor %}
    ],
    "timeout": {{ logstash_forwarder.timeout }},
    "ssl ca": "{{ logstash_forwarder.ssl.dir }}/{{ logstash_forwarder.ssl.crt }}"
  },
  "files": {{ logstash_forwarder.files | to_json }}
}
